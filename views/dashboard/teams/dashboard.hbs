<div class="container">
    <div class="row">
        <div class="col-md-12 text-center text-light pt-5">
            <h1>
                {{ team.name }} <i class="fa-solid fa-info-sign" onclick="location.href='/dashboard/teams/getting-started';" style="cursor: pointer;" data-toggle="tooltip" title="Getting started"></i>
            </h1>
            <small><small>by {{ team.creator }}</small></small>
        </div>
    </div>

    {{# unless permissions.view }}
        <script>(() => location.href="/dashboard/teams")();</script>
        <div class="row">
            <div class="col">
                <label class="pt-4" style="color: crimson">Not allowed to see this.</label>
            </div>
        </div>
    {{ else }}
        {{# if team.locked }}
            <label class="pt-5 pl-auto" style="color: crimson">Get <a href="https://ko-fi.com/cosmeticx/tiers" style="color: #f14d5a">Premium</a> for more team slots.</label>
        {{ else }}
            {{# unless team }}
                    <div class="row">
                        <div class="col text-center">
                            <label class="pt-4" style="color: crimson">Team not found.</label>
                        </div>
                    </div>
            {{ else }}
                <!-- MEMBERS & TOKEN -->
                {{# if permissions.owner }}
                    <div class="row">
                        <div class="col-md-8">
                            {{# if team.hasPremiumFeatures }}
                                <div class="col">
                                    <div id="members" class="text-light" style="flex: 1 1 auto;">
                                        <div class="mt-3 text-light">
                                            <table class="table text-light">
                                                <thead>
                                                <tr>
                                                    <th scope="col">Tag</th>
                                                    <th scope="col">Permission</th>
                                                    <th scope="col">Actions</th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {{# each pending_invites }}
                                                    <tr>
                                                        <td scope="row" class="text-nowrap">{{ this.tag }}</td>
                                                        <td><h3><span class="badge badge-warning bg-warning">Pending</span></h3></td>
                                                        <td>
                                                            <button data-toggle="tooltip" title="Revoke" type="button" class="btn btn-danger"><i class="fa-solid fa-ban" onclick="revokeInvite('{{ this.discord_id }}');"></i></button>
                                                        </td>
                                                    </tr>
                                                {{/ each }}
                                                {{# each members }}
                                                    <tr>
                                                        <td scope="row">{{ this.tag }}</td>
                                                        <td><code>{{ this.permission }}</code></td>
                                                        <td>
                                                            <button onclick="window.location='/teams/@/{{ ../team.name }}/members/@/{{ this.discord_id }}/kick';" data-toggle="tooltip" title="Kick" type="button" class="btn btn-danger"><i class="fa-solid fa-ban"></i></button>
                                                        </td>
                                                    </tr>
                                                {{/ each }}
                                                </tbody>

                                                <tr>
                                                    <td scope="row">
                                                        <select class="mdb-select" id="new_member">
                                                            <option value="" disabled selected>Select a user</option>
                                                            {{# each all_registered_users }}
                                                                <option value="{{ this.discord_id }}">{{ this.tag }}</option>
                                                            {{/ each }}
                                                        </select>
                                                    </td>
                                                    <td scope="row">
                                                        <select class="mdb-select" id="permission">
                                                            <option value="admin" selected>Admin</option>
                                                            <option value="manage_drafts">Manage drafts</option>
                                                            <option value="manage_submissions">Manage submissions</option>
                                                            <option value="contribute">Submit cosmetics</option>
                                                        </select>
                                                    </td>
                                                    <td>
                                                        <button data-toggle="tooltip" title="Invite"  type="button" class="btn btn-success" onclick="sendInvite('{{ this.discord_id }}')"><i class="fa-solid fa-paper-plane"></i></button>
                                                    </td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            {{ else }}
                                <label class="pt-5 pl-auto" style="color: crimson">Get <a href="https://ko-fi.com/cosmeticx/tiers" style="color: #f14d5a">Premium</a> for team roles.</label>
                            {{/ if }}
                        </div>

                        <div class="col-md-4">
                            <label class="text-light pt-4 mb-1">Token</label>
                            <div class="col">
                                <div id="token" class="text-light " style="flex: 1 1 auto;">
                                    <div class="mt-3">
                                        <button class="btn btn-primary" id="copy-token" type="button" onclick="copyToken()">Copy</button>
                                        <button class="btn btn-primary ml-2" id="reset-token" type="button" onclick="resetToken()">Regenerate</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/if}}

                <!-- DRAFTS -->
                {{# if has_drafts }}
                    {{# if permissions.drafts }}
                        <div class="row">
                            <div class="col">
                                <label class="text-light pt-4 mb-1">Drafts</label>
                                <div id="draft_cosmetics" class="text-light row" style="flex: 1 1 auto;">
                                    {{# each drafts }}
                                        <div class="col col-sm-3 mt-2">
                                            <div class="card h-100 text-white bg-dark">
                                                <div class="card-header d-flex justify-content-between align-items-center text-nowrap">
                                                    {{# if this.locked }}
                                                        <a href="https://ko-fi.com/s/63127362ba">
                                                            <button class="btn btn-sm btn-secondary" data-toggle="tooltip" title="Buy more slots"><i class="fa-solid fa-lock"></i></button>
                                                        </a>
                                                    {{/ if }}
                                                    {{ this.name }}
                                                    <div class="btn-group" role="group" aria-label="Actions">
                                                        {{# unless this.locked }}
                                                            <a href="/dashboard/teams/@/{{ ../team.name }}/cosmetics/@/{{ this.id }}/edit">
                                                                <button class="btn btn-sm btn-primary pr-2" data-toggle="tooltip" title="Edit"><i class="fa-solid fa-pencil"></i></button>
                                                            </a>
                                                        {{/ unless }}
                                                        <a href="/dashboard/teams/@/{{ ../team.name }}/cosmetics/@/{{ this.id }}/delete">
                                                            <button class="btn btn-sm btn-danger " data-toggle="tooltip" title="Delete"><i class="fa-solid fa-trash"></i></button>
                                                        </a>
                                                    </div>
                                                </div>
                                                <div class="card-body d-flex flex-column">
                                                    <p class="card-title text-muted">
                                                        <small><small>Uploaded by <u>{{# unless this.author }}Unknown{{ else }}{{ this.author }}{{/ unless }}</u></small></small>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    {{ else }}
                                        <div class="col mt-2 ml-2">
                                            <label class="pt-2" style="color: crimson">No drafts found.</label>
                                        </div>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                  {{/if}}
                {{/if}}

                <!-- SUBMISSIONS -->
                {{# if has_submissions }}
                    {{# if permissions.submissions }}
                        <div class="row">
                            <div class="col">
                                <label class="text-light pt-4 mb-1">Submitted cosmetics</label>
                                <div id="draft_cosmetics" class="text-light row" style="flex: 1 1 auto;">
                                    {{# each submitted }}
                                        <div class="col col-sm-3 mt-2">
                                            <div class="card h-100 text-white bg-dark">
                                                <div class="card-header d-flex justify-content-between align-items-center text-nowrap">
                                                    {{# if this.locked }}<a href="https://ko-fi.com/s/63127362ba">
                                                        <button class="btn btn-sm btn-secondary" data-toggle="tooltip"
                                                                title="Buy more slots"><i class="fa-solid fa-lock"></i></button>
                                                    </a>{{/ if }}
                                                    {{ this.name }}
                                                    <div class="btn-group" role="group" aria-label="Actions">
                                                        {{# unless this.locked }}{{# if permissions.drafts }}
                                                            <a href="/dashboard/teams/@/{{ team.name }}/cosmetics/@/{{ this.id }}/edit">
                                                                <button class="btn btn-sm btn-primary pr-2" data-toggle="tooltip" title="Edit"><i class="fa-solid fa-pencil"></i></button>
                                                            </a>
                                                        {{/ if }}{{/ unless }}
                                                        {{# if permissions.drafts }}
                                                            <a href="/dashboard/teams/@/{{ team.name }}/cosmetics/@/{{ this.id }}/delete">
                                                                <button class="btn btn-sm btn-danger " data-toggle="tooltip" title="Delete"><i class="fa-solid fa-trash"></i></button>
                                                            </a>
                                                        {{ else if permissions.owner }}
                                                            <a href="/dashboard/teams/@/{{ team.name }}/cosmetics/@/{{ this.id }}/delete">
                                                                <button class="btn btn-sm btn-danger " data-toggle="tooltip"
                                                                        title="Delete"><i class="fa-solid fa-trash"></i></button>
                                                            </a>
                                                        {{/ if }}
                                                    </div>
                                                </div>
                                                <div class="card-body d-flex flex-column">
                                                    <p class="card-title text-light">
                                                        <small><small>Uploaded by <u>{{# unless this.creator }}Unknown{{ else }}{{ this.creator }}{{/ unless }}</u></small></small>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    {{ else }}
                                        <div class="col mt-2 ml-2">
                                            <label class="pt-2" style="color: crimson">No submissions found.</label>
                                        </div>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                    {{/if}}
                {{/if}}

                <!-- CONTRIBUTE -->
                {{# unless this.maxCosmeticSlotsReached }}
                    {{# if permissions.contribute }}
                        {{# unless permissions.owner }}
                                <div class="row">
                                    <div class="col">
                                        <label class="text-light pt-4 mb-1">Submit cosmetics</label>
                                        <div class="col">
                                            <div id="contribute_cosmetics" class="text-light row" style="flex: 1 1 auto;">
                                                <div class="col-sm-auto mt-2">
                                                    <div class="card-body">
                                                        <a href="/dashboard/teams/@/{{ team.name }}/cosmetics/new">
                                                            <button class="btn create-btn text-light"><i data-toggle="tooltip" title="Create" class="fa-solid fa-plus"></i>
                                                            </button>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        {{/ unless }}
                    {{/ if }}
                {{/ unless }}

                <!-- PUBLIC COSMETICS -->
                <div class="row">
                    <div class="col">
                        <label class="text-light pt-4 mb-1">Cosmetics</label>
                        <div class="col">
                            <div id="cosmetics" class="text-light row">
                                {{# each public_cosmetics }}
                                    <div class="col col-sm-3 mt-2">
                                        <div {{# unless this.locked }}{{# if ../permissions.drafts }}onclick="location.href='/dashboard/teams/@/{{ ../team.name }}/cosmetics/@/{{ this.id }}/edit'"{{ else if ../permissions.owner }}onclick="location.href='/dashboard/teams/@/{{ ../team.name }}/cosmetics/@/{{ this.id }}/edit'"{{/ if }}{{/ unless }} class="card h-100 text-white {{# unless this.locked }}bg-dark {{/ unless }}mb-3" style="max-width: 18rem;cursor: pointer;{{# if this.locked }}background: #f14d5a;{{/ if }}"{{# if this.locked }} data-toggle="tooltip" title="Not enough cosmetic slots"{{/ if }}>
                                            <div class="card-header d-flex justify-content-between align-items-center text-nowrap">
                                                {{# if this.locked }}<a href="https://ko-fi.com/s/63127362ba">
                                                    <button class="btn btn-sm btn-secondary" data-toggle="tooltip"
                                                            title="Buy more slots"><i class="fa-solid fa-lock"></i></button>
                                                </a>{{/ if }}
                                                {{ this.name }}
                                                <div class="btn-group" role="group" aria-label="Actions">
                                                    {{# if ../permissions.drafts }}
                                                        <a href="/dashboard/teams/@/{{ ../team.name }}/cosmetics/@/{{ this.id }}/delete">
                                                            <button class="btn btn-sm btn-danger" data-toggle="tooltip" title="Delete"><i class="fa-solid fa-trash"></i></button>
                                                        </a>
                                                    {{ else if ../permissions.owner }}
                                                        <a href="/dashboard/teams/@/{{ ../team.name }}/cosmetics/@/{{ this.id }}/delete">
                                                            <button class="btn btn-sm btn-danger" data-toggle="tooltip" title="Delete"><i class="fa-solid fa-trash"></i></button>
                                                        </a>
                                                    {{/ if }}
                                                </div>
                                            </div>
                                            <div class="card-footer text-light d-flex flex-column text-nowrap">
                                                    <small><small>Uploaded by <u>{{# unless this.creator }}Unknown{{ else }}{{ this.creator }}{{/ unless }}</u></small></small>
                                            </div>
                                        </div>
                                    </div>
                                {{/each}}
                                {{# unless team.max_cosmetic_slots_reached }}
                                    {{# if permissions.drafts }}
                                        <div class="col-sm-auto mt-2">
                                            <div class="card-body">
                                                <a href="/dashboard/teams/@/{{ team.name }}/cosmetics/new">
                                                    <button class="btn create-btn text-light"><i data-toggle="tooltip" title="New" class="fa-solid fa-plus"></i></button>
                                                </a>
                                            </div>
                                        </div>
                                    {{ else if permissions.owner }}
                                        <div class="col-sm-auto mt-2">
                                            <div class="card-body">
                                                <a href="/dashboard/teams/@/{{ team.name }}/cosmetics/new">
                                                    <button class="btn create-btn text-light"><i data-toggle="tooltip" title="New" class="fa-solid fa-plus"></i></button>
                                                </a>
                                            </div>
                                        </div>
                                    {{/ if }}
                                {{/ unless }}
                            </div>
                        </div>
                    </div>
                </div>
            {{/ unless }}
        {{/ if }}
    {{/ unless }}
</div>
<script>
    function copyToken() {
        let element = document.getElementById("copy-token");
        let content = document.createElement("textarea");
        document.body.appendChild(content);
        content.innerHTML = "{{ team.token }}";
        content.select();
        document.execCommand("copy");
        document.body.removeChild(content);

        element.classList.remove("btn-primary");
        element.classList.add("btn-success");
        element.innerText = "Copied!";
        setTimeout(() => {
            element.classList.remove("btn-success");
            element.classList.add("btn-primary");
            element.innerText = "Copy";
        }, 750);
    }
    function resetToken() {
        let element = document.getElementById("reset-token");
        element.classList.remove("btn-primary");
        element.classList.add("btn-warning");
        element.innerText = "Generating";

        let xhr = new XMLHttpRequest();
        xhr.open("POST", "/resetToken");
        xhr.setRequestHeader("Content-Type", "application/json");
        xhr.setRequestHeader("Token", "{{ team.token }}");
        xhr.send();

        setTimeout(() => {
            element.classList.remove("btn-warning");
            element.classList.add("btn-primary");
            element.innerText = "Regenerate";
            location.reload();
        }, 750);
    }

    function sendInvite() {
        let permission = $("#permission").val();
        let discord_id = $("#new_member").val();
        let xhr = new XMLHttpRequest();

        xhr.open("POST", "/api/teams/@/{{ team.name }}/invite/@/" + discord_id + "/" + permission);
        xhr.setRequestHeader("Content-Type", "application/json");

        xhr.onreadystatechange = function () {
            if (xhr.readyState === 4) {
                location.reload();
            }
        };
        xhr.send();
    }
    function revokeInvite(discord_id) {
		console.log("POST")
        let xhr = new XMLHttpRequest();
        xhr.open("POST", "/api/teams/@/{{ team.name }}/invite/@/" + discord_id + "/revoke");

        xhr.onreadystatechange = function () {
            if (xhr.readyState === 4) {
                location.reload();
            }
        };
        xhr.send();
    }
</script>
