        .hidden {
            display: none;
        }
    </style>
    <script>let ad_blocker = true;</script>
    <script src="/public/javascripts/sailthru.js"></script>
    <script>
    checkForAdBlocker();

    function checkForAdBlocker() {
        if (ad_blocker) ad_blocker_detected();
        else if (!document.getElementById('zPsRbVdgSXOD')) ad_blocker_detected();
        else ad_blocker_not_detected();

        function ad_blocker_detected() {
            let element = document.getElementById("ads-blocked");
            element.classList.remove("hidden");
            if (!location.href.includes("/dashboard/ad_blocker_detected")) {
                location.href = "/dashboard/ad_blocker_detected";
            }
        }
    }
    function ad_blocker_not_detected() {
        let element = document.getElementById("ads-blocked");
        element.classList.add("hidden");
        if (location.href.includes("/dashboard/ad_blocker_detected")) {
            location.href = '/';
        }
    }
</script>
